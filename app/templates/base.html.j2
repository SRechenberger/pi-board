{% extends "bootstrap/base.html" %}
{% import 'bootstrap/wtf.html' as wtf %}

{% block navbar %}
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="row">
        <div class="col-md-2" align="center" style="border-style: solid; border-radius: 3px; border-width: thin; border-color: silver">
          PiBoard v{{ VERSION }}
        </div>
        <div class="col-md-10" align="left">
          <a class="nav-btn btn btn-xs btn-default" href="{{ url_for('main.index') }}">
            Home
          </a>
          {% if current_user.is_anonymous %}
          <a class="nav-btn btn btn-xs btn-default" href="{{ url_for('auth.login') }}">
            Login
          </a>
          {% else %}
          <a class="nav-btn btn btn-xs btn-default" href="{{ url_for('main.profile', handle=current_user.handle )}}">
            Profile
          </a>
          <a class="nav-btn btn btn-xs btn-default" href="{{ url_for('auth.logout') }}">
            Logout
          </a>
          {% endif %}
        </div>
      </div>
    </div>
  </nav>
</div>
{% endblock navbar %}

{% block styles %}
  {{ super() | safe }}
  <link href="/static/styles.css" rel="stylesheet">
{% endblock styles %}

{% block title %}
{% if title %}
{{ title }}
{% else %}
Welcome to PiBoard
{% endif %}
{% endblock title %}

{% block content %}
<div class="container">
  {% with messages = get_flashed_messages() %}
  {% if messages %}
    {% for message in messages %}
    <div class="alert alert-info" role="alert">
      {{ message }}
    </div>
    {% endfor %}
  {% endif %}
  {% endwith %}
</div>
<div class="container">
  {% block app_content %}
  {% endblock app_content %}
</div>
{% endblock content %}

{% block scripts %}
  {{ super() | safe }}
  {{ moment.include_moment() }}
  {{ moment.lang(g.locale) }}
{% endblock scripts %}
