<div class="post">
  <div class="main-row row">
    <div class="post-avatar col-xs-3 col-md-1">
      <a href="{{ url_for('main.profile', handle=post.author.handle) }}">
        <img src="{{ image_url(post.author.profile_pic) }}" class="float-left">
      </a>
    </div>
    <div class="post-main col-xs-9 col-md-11">
      <div class="row">
        <div class="col-xs-6 col-md-6">
          {% if post.author.displayed_name %}
          <b>{{ post.author.displayed_name }}</b>
          <i>({{ post.author.handle }})</i>
          {% else %}
          <b>{{ post.author.handle }}</b>
          {% endif %}
        </div>
        <div class="col-xs-6 col-md-6" align="right">
          {% if post.edited %}
          Edited: {{ moment(post.edited).fromNow() }}
          {% else %}
          {{ moment(post.timestamp).fromNow() }}
          {% endif %}
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-md-12">
          {{ post.body }}
        </div>
      </div>
    </div>
  </div>
  <div class="nav-row row">
    <div class="col-xs-3 col-md-1">
    </div>
    <div class="post-nav col-xs-9 col-md-11">
      <a class="post-btn btn btn-xs btn-default"
         href="{{ url_for('main.post', handle=post.author.handle, post_id=post.id) }}">
        Show
      </a>
      {% if post.comment_to and not top_level_visible %}
      <a class="post-btn btn btn-xs btn-default"
         href="{{ url_for('main.post', handle=post.comment_to.author.handle, post_id=post.comment_to.id)}}">
        Parent
      </a>
      {% endif %}
      {% if post.author.handle == current_user.handle %}
      <a class="post-btn btn btn-xs btn-default"
         href="{{ url_for('main.edit_post', post_id=post.id) }}">
        Edit
      </a>
      <button type="button" class="post-btn btn btn-xs btn-default" data-toggle="modal" data-target="#delete-post-{{ post.id }}">
        Delete
      </button>
      {% include "main/_delete_post_dialog.html.j2" %}
      {% endif %}
    </div>
  </div>
  <div class="answer-row row">
    <div class="col-xs-2 col-sd-1 col-md-1"></div>
    <div class="post-answers col-xs-10 col-sd-11 col-md-11">
    {% if show_answers and depth < MAX_DEPTH %}
      <p>Answers</p>
      {% if post.comments %}
        {% with depth = depth+1 %}
          {% for post in post.comments %}
            <p>{% include "main/_post.html.j2" %}</p>
          {% endfor %}
        {% endwith %}
      {% endif %}
    {% else %}
      {% with answers = len(post.comments) %}
      {% if answers == 0 %}
        No answers
      {% elif answers == 1 %}
        1 answer
      {% else %}
        {{ answers }} answers
      {% endif %}
      {% endwith %}
    {% endif %}
    </div>
  </div>
</div>
